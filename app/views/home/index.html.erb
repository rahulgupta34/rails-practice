<h1>Login With Google Option.</h1>
<% if current_user %>
  <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %>
  <br/>
<%= link_to "Repository", url_for([:repositories]) %>
<% else %>
  <%= button_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false } %>
  <br/>
  <%= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, method: :post, data: { turbo: false } %>
  <br/>
  <%= button_to "Sign in with Github", user_github_omniauth_authorize_path, method: :post, data: { turbo: false } %>
<% end %>
